<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".noteadvice.therapist.todoList.CreateATodolistActivity"
    android:background="@drawable/lineinthesky1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Create a Todolist"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/noteDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="18/12/2020"
        android:textColor="@color/YellowGreen"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listViewTodolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        tools:listitem="@layout/listitem_todolistitem">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonNewTodolistItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/background_line"
            android:textColor="@color/colorWhite"
            android:onClick="onClickBtnAddTodolistItem"
            android:layout_weight="0.5"
            android:text="+" />

        <Button
            android:id="@+id/buttonDone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/background_line"
            android:textColor="@color/colorWhite"
            android:onClick="onClickBtnDone"
            android:text="Send this todolist" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_line"
            android:textColor="@color/colorWhite"
            android:onClick="onClickBtnCancel"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>