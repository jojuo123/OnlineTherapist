<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".noteadvice.therapist.NoteAdviceTherapistActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/note_advice"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnAddNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAddNote"
        android:text="Add new note" />

    <Button
        android:id="@+id/btnAddTodolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAddTodoList"
        android:text="Add a new todolist" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickCancelBtn"
        android:text="Cancel" />

</LinearLayout>
